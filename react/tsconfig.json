{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
