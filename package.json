{
  "name": "admin-example",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@vtex/prettier-config": "^0.3.1",
    "@vtex/tsconfig": "^0.5.6",
    "eslint": "^7.7.0",
    "eslint-config-vtex": "^12.8.6",
    "eslint-config-vtex-react": "^6.7.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.0",
    "typescript": "^3.8.3"
  }
}
